<script src="/js/findIdPass.js"></script>
<script type="text/javascript">

    const emailSignup = () =>{
        const signUpModal = new bootstrap.Modal(document.querySelector('#email-signup-modal'));
        signUpModal.show();

        document.querySelector('#email').value = '';
        document.querySelector('#pass1').value = '';
        document.querySelector('#pass2').value = '';
        document.querySelector('#name').value = '';
        document.querySelector('#hp').value = '';
    }
    function checkSignupData (){
        const email = document.querySelector('#email').value;
        const pass1 = document.querySelector('#pass1').value;
        const pass2 = document.querySelector('#pass2').value;
        const name = document.querySelector('#name').value;
        const hp = document.querySelector('#hp').value;

        if(email === ''){
            alert('이메일을 입력하세요.');
            return false;
        }else if(pass1 !== pass2){
            alert('비밀번호가 일치하지 않습니다.');
            return false;
        }else if(name === ''){
            alert('이름을 입력하세요.');
            return false;
        }else if(hp === ''){
            alert('휴대폰 번호를 입력하세요.');
            return false;
        }else{
            return true;
        }
    }
    const signupBtn = async () => {
        if(checkSignupData()){
            try{
                await axios.post('/signupEmail',{
                    email: document.querySelector('#email').value,
                    pass: document.querySelector('#pass1').value,
                    name : document.querySelector('#name').value,
                    hp: document.querySelector('#hp').value
                }).then(response=>{
                    if(response.data === 'success'){
                        alert('회원가입이 완료되었습니다.');
                        self.location.reload();
                    }else{
                        alert('이미 등록된 이메일이 있습니다.');
                    }
                });
            }catch (e) {
                alert('회원가입 오류: '+e);
            }
        }
    }
</script>
