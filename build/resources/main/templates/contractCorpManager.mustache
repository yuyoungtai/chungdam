<script type="text/javascript">
    const itemMenuListEle = document.getElementsByClassName('menu-item');
    for (const itemMenu of itemMenuListEle) {
        itemMenu.classList.remove('current');
    }

    document.querySelector('#contract-corp-menu').classList.add('current');

    //사업자등록증 등록
    //기획서 업로드 리스너
    $('#tex-file').fileinput({
        uploadUrl: '/uploadCorpDoc',
        uploadExtraData:function (previewId, index){
            const data = {
                corpId: document.querySelector('#current-corp-id').value
            };
            return data;
        },
        maxFileSize: 1073741824
    }).on('filebatchuploadcomplete', function(event, preview, config, tags, extraData) {
        corpDocFileCheck(document.querySelector('#current-corp-id').value);
    }).on('fileselect', function (event, numFiles, label){
        const fileSize = event.target.files[0].size;
        if(fileSize > 1073741824){
            alert('1기가 이하의 파일만 업로드 할 수 있습니다.');
        }
    });

    //사업자등록증 파일 가져오기
    const corpDocFileCheck = async (corpId) => {
        try {
            await axios.post('/findCorpByCorpId', {
                corpId
            }).then(response => {

                if (response.data.tex === null) {
                    document.querySelector('#tex-file').checked = false;
                    document.querySelector('#tex-down-btn1').removeAttribute('src');
                    document.querySelector('#tex-down-btn2').removeAttribute('src');
                } else {
                    document.querySelector('#tex-file').checked = true;
                    document.querySelector('#tex-down-btn1').setAttribute('src', response.data.tex);
                    document.querySelector('#tex-down-btn2').setAttribute('src', response.data.tex);
                }
            });
        }catch (e) {
            alert('사업자등록증 업로드 오류: '+e);
        }
    }

    //파일 다운로드
    const downloadFile1 = (self) =>{
        //console.log(self.attributes.src.value);

        var downloadFrame = document.getElementById('invisible');
        downloadFrame.src = `https://chungdam.s3.ap-northeast-2.amazonaws.com/${self.attributes.src.value}`;
    }

    //파일 다운로드
    const downloadFile2 = (self) =>{
        //console.log(self.attributes.src.value);

        const link = document.createElement("a");
        link.setAttribute('target', '_blank');
        link.href = `https://chungdam.s3.ap-northeast-2.amazonaws.com/${self.attributes.src.value}`;
        link.download = "directingFile";
        link.click();
    }

</script>
