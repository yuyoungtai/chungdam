{{>layout/indexHeader}}
<body>
<section id="page-title" class="page-title mb-5">
    <div class="container clearfix">
        <h1>웨딩 행사 관리</h1>
    </div>
</section>
<section class="px-5 mb-5">
    <div>
        <button class="btn btn-success me-5" onclick="showNewContModal();">신규 웨딩 등록</button>
    </div>
</section>

<section class="px-5">
    <!--검색 섹션 -->
    <h3 class="mb-1">고객 검색</h3>
    <div class="w-100 me-3">
        <form action="#" onsubmit="return false;">
            <div class="row align-items-center">
                <div class="col-12 col-lg-3">
                    <input id="search-hp-input" class="form-control" type="number" placeholder="전화번호 끝 4자리">
                </div>
                <div class="col-12 col-lg-3">
                    <input id="search-name-input" class="form-control " type="text" placeholder="이름 입력">
                </div>
                <div class="col-12 col-lg-3">
                    <input id="search-email-input" class="form-control" type="email" placeholder="이메일 입력">
                </div>
                <div class="col-6 col-lg-2 text-lg-end">
                    <button id="search-btn" type="submit" class="btn btn-oding btn-sm text-white w-100"
                            onclick="searchEvent();">검 색
                    </button>
                </div>

            </div>
        </form>
    </div>
    <!--검색 섹션 END -->
    <hr>
</section>

<!-- 이벤트 정보 섹션 -->
<section class="px-5">
    <div id="cont-btn-group" class="invisible my-3">
        <div class="">
            <button class="btn btn-sm btn-warning mx-1" onclick="showDmemo();">상담 메모</button>
            <button class="btn btn-sm btn-warning mx-1" onclick="showFmemo();">플라워 메모</button>
            <button class="btn btn-sm btn-warning mx-1" onclick="showCmemo();">케이터링 메모</button>
            <button class="btn btn-sm btn-primary mx-1" onclick="updateEvent();">이벤트 정보 수정</button>
            <input id="current-event-id" type="hidden">
        </div>
    </div>

    <div class="bg-light py-3">
        <div class="d-flex col-11 justify-content-between mx-auto mb-3">
            <div class="col-5">
                <span>예식일</span>
                <input id="event-date" type="date" class="form-control">
            </div>
            <div class="col-5">
                <span>예식시간</span>
                <input id="event-time" type="time" class="form-control">
            </div>
        </div>

        <div class="d-flex col-11 justify-content-between mx-auto mb-3">
            <div class="col-5">
                <span>보증인원</span>
                <input id="person" type="number" class="form-control">
            </div>
            <div class="col-5">
                <span>이메일</span>
                <input id="email" type="text" class="form-control">
            </div>
        </div>

        <div class="d-flex col-11 justify-content-between mx-auto mb-3">
            <div class="col-5">
                <span>신랑님</span>
                <input id="groom" type="text" class="form-control">
            </div>
            <div class="col-5">
                <span>신랑님 연락처</span>
                <input id="groom-hp" type="text" class="form-control">
            </div>
        </div>

        <div class="d-flex col-11 justify-content-between mx-auto">
            <div class="col-5">
                <span>신부님</span>
                <input id="bride" type="text" class="form-control">
            </div>
            <div class="col-5">
                <span>신부님 연락처</span>
                <input id="bride-hp" type="text" class="form-control">
            </div>
        </div>

    </div>
</section>
<!-- 이벤트 정보 섹션 END -->

<!--memo 섹션-->
<section class="px-5 my-5">
    <div id="d-memo-wrap" class="row d-none">
        <h4 class="mb-2">상담실 메모</h4>
        <textarea id="d-memo-info" class="w-100 form-control" rows="7"></textarea>
        <div class="text-end mt-1">
            <button type="button" class="btn btn-warning" onclick="updateDmemo();">저 장</button>
        </div>
    </div>
    <div id="f-memo-wrap" class="row d-none">
        <h4 class="mb-2">플라워팀 메모</h4>
        <textarea id="f-memo-info" class="w-100 form-control" rows="7"></textarea>
        <div class="text-end mt-1">
            <button type="button" class="btn btn-warning" onclick="updateFmemo();">저 장</button>
        </div>
    </div>
    <div id="c-memo-wrap" class="row d-none">
        <h4 class="mb-2">케이터링 메모</h4>
        <textarea id="c-memo-info" class="w-100 form-control" rows="7"></textarea>
        <div class="text-end mt-1">
            <button type="button" class="btn btn-warning" onclick="updateCmemo();">저 장</button>
        </div>
    </div>
</section>
<!--memo 섹션 END -->

<!--계약 정보 섹션 -->
<section class="px-5 my-5">
    <h3 class="mb-1">계약정보</h3>
    <p class="mb-2">신규항목 or 기존 내용을 수정하신 후 <strong>'저장'</strong> 하실 때는 <strong>'체크박스'</strong>에 체크하신 후 <strong>'계약정보
        저장'</strong> 버튼을 누르세요.</p>
    <p><span class="text-danger">'붉은색'</span> 항목은 '취소'건입니다.</p>
    <div id="contract-btn-group" class="invisible my-3">
        <button class="btn btn-sm btn-danger me-3" onclick="cancelContList();">선택항목 취소</button>
        <button class="btn btn-sm btn-success mx-1" onclick="addRow();">항목추가</button>
    </div>

    <div class="overflow-auto">
        <div class="d-flex flex-nowrap text-center">
            <div class="col-1 fw-bold"><input id="all-check-btn" type="checkbox"></div>
            <div class="col-2 col-md-1">상태</div>
            <div class="col-4 col-md-4 fw-bold">상품명</div>
            <div class="col-2 col-md-3 fw-bold">단가</div>
            <div class="col-1 fw-bold">수량</div>
            <div class="col-2 fw-bold">총 액</div>
        </div>
        <hr>
        <div id="cont-wrap" class=""></div>
        <div id="total-price-wrap" class=""></div>
        <div id="cont-save-wrap" class="text-end">
            <button class="btn btn-oding text-white" onclick="saveContList();">계약정보 저장</button>
        </div>
    </div>
</section>
<!--계약 정보 섹션 END -->

<!-- 신규 웨딩 등록 모달 -->
<div id="add-cont-modal" class="modal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">신규 웨딩 등록</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>신규 계약건을 등록합니다.</p>

                <h3 class="mb-2">고객 정보</h3>
                <p>연락처가 없는 경우 "010"만 입력하세요.</p>
                <div class="mb-3">
                    <div class="d-flex">
                        <div class="col-6">
                            <div class="input-group mb-3">
                                <span class="input-group-text">신랑님 성함</span>
                                <input id="add-groom" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-group mb-3">
                                <span class="input-group-text">신랑님 연락처</span>
                                <input id="add-groom-hp" type="text" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="d-flex">
                        <div class="col-6">
                            <div class="input-group mb-3">
                                <span class="input-group-text">신부님 성함</span>
                                <input id="add-bride" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-group mb-3">
                                <span class="input-group-text">신부님 연락처</span>
                                <input id="add-bride-hp" type="text" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="input-group mb-3">
                            <span class="input-group-text">이메일(선택)</span>
                            <input id="add-email" type="text" class="form-control">
                        </div>
                    </div>
                </div>
                <!--고객정보 END-->

                <h3>이벤트 정보</h3>
                <div class="d-flex flex-wrap">
                    <div class="mb-3 col-6">
                        <div class="input-group mb-3">
                            <span class="input-group-text">예식일</span>
                            <input id="add-event-date" type="date" class="form-control">
                        </div>
                    </div>

                    <div class="mb-3 col-6">
                        <div class="input-group mb-3">
                            <span class="input-group-text">예식시간</span>
                            <input id="add-event-time" type="time" class="form-control">
                        </div>
                    </div>

                    <div class="mb-3 col-6">
                        <div class="input-group mb-3">
                            <span class="input-group-text">보증인원</span>
                            <input id="add-person" type="number" class="form-control">
                        </div>
                    </div>
                </div>

                <hr>
                <div>
                    <h3>기본 계약 정보</h3>
                    <div class="d-flex flex-nowrap text-center justify-content-center align-items-center">
                        <div class="col-4 col-md-4 fw-bold">상품명</div>
                        <div class="col-3 fw-bold">가격</div>
                        <div class="col-1 fw-bold">수량</div>
                        <div class="col-3 fw-bold">총액</div>
                    </div>
                    <hr>
                    <div class="first-cont d-flex flex-nowrap text-center justify-content-center align-items-center">
                        <div class="col-4 col-md-4 fw-bold"><input type="text"
                                                                   class="form-control text-center cont-title"
                                                                   value="대관 & 연출"></div>
                        <div class="col-3 fw-bold"><input type="text" class="form-control text-center cont-supply"
                                                          value="0"
                                                          onkeyup="getRowTotal(this);"></div>
                        <div class="col-1 fw-bold"><input type="text" class="form-control text-center cont-count"
                                                          value="1"
                                                          onkeyup="getRowTotal(this);"></div>
                        <div class="col-3 fw-bold"><input type="text" class="form-control text-center cont-total"
                                                          value="0"
                                                          readonly></div>
                    </div>
                    <div class="first-cont d-flex flex-nowrap text-center justify-content-center align-items-center my-3">
                        <div class="col-4 col-md-4 fw-bold"><input type="text"
                                                                   class="form-control text-center cont-title"
                                                                   value="플라워 연출"></div>
                        <div class="col-3 fw-bold"><input type="text" class="form-control text-center cont-supply"
                                                          value="0"
                                                          onkeyup="getRowTotal(this);"></div>
                        <div class="col-1 fw-bold"><input type="text" class="form-control text-center cont-count"
                                                          value="1"
                                                          onkeyup="getRowTotal(this);"></div>
                        <div class="col-3 fw-bold"><input type="text" class="form-control text-center cont-total"
                                                          value="0"
                                                          readonly></div>
                    </div>
                </div>
                <!--이벤트 정보 END-->
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">취 소</button>
                <button type="button" class="btn btn-primary" onclick="addNewEvent();">신규 등록</button>
            </div>
        </div>
    </div>
</div>
<!-- 신규 웨딩 등록 모달 END -->


<!--고객 검색 결과 모달 -->
<div id="search-result-modal" class="modal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">검색 결과</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="search-result-wrap"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫 기</button>
            </div>
        </div>
    </div>
</div>
<!--고객 검색 결과 모달END -->
{{>layout/indexFooter}}
<script src="/js/search.js"></script>
<script src="/js/addContract.js"></script>
<script src="/js/editContract.js"></script>
<script src="/js/editEvent.js"></script>
<script src="/js/contMemo.js"></script>
<script type="text/javascript">
    const itemMenuListEle = document.getElementsByClassName('menu-item');
    for (const itemMenu of itemMenuListEle) {
        itemMenu.classList.remove('current');
    }

    document.querySelector('#contract-menu').classList.add('current');
</script>
</body>
</html>